001  import random
002  
003  def imprimir_tablero(tablero):
004      """ Función para imprimir el tablero actual """
005      for i in range(3):
006          for j in range(3):
007              print(f" {tablero[i][j]} ", end="")
008              if j < 2:
009                  print("|", end="")
010          print()  # Salto de línea después de cada fila
011          if i < 2:
012              print("-----------")  # Línea horizontal entre filas
013  
014  def verificar_ganador(tablero, jugador):
015      """ Función para verificar si hay un ganador """
016      # Verificar filas, columnas y diagonales
017      for i in range(3):
018          if (all(tablero[i][j] == jugador for j in range(3)) or       # Filas
019              all(tablero[j][i] == jugador for j in range(3)) or       # Columnas
020              all(tablero[i][i] == jugador for i in range(3)) or       # Diagonal principal
021              all(tablero[i][2 - i] == jugador for i in range(3))):   # Diagonal secundaria
022              return True
023      return False
024  
025  def movimiento_cpu(tablero, jugador):
026      """ Función para que la CPU realice un movimiento """
027      # Estrategia sencilla: mover aleatoriamente en una casilla vacía
028      movimientos_posibles = [(i, j) for i in range(3) for j in range(3) if tablero[i][j] == " "]
029      fila, columna = random.choice(movimientos_posibles)
030      tablero[fila][columna] = jugador
031  
032  def juego_gato():
033      """ Función principal para ejecutar el juego """
034      tablero = [[" " for _ in range(3)] for _ in range(3)]
035      
036      # Solicitar nombre y edad del jugador
037      nombre = input("Ingrese su nombre: ")
038      while True:
039          edad_str = input("Ingrese su edad: ")
040          try:
041              edad = int(edad_str)
042              break  # Si la conversión es exitosa, salir del bucle
043          except ValueError:
044              print("Error: La edad debe ser un número entero.")
045      
046      jugador_usuario = nombre
047      jugador_cpu = "CPU"
048      jugador_actual = "X"  # Empieza el usuario
049      
050      resultado = None
051  
052      while True:
053          # Verificar si ya hay un resultado antes de imprimir el tablero
054          if resultado:
055              break
056  
057          imprimir_tablero(tablero)
058          print(f"\nTurno del jugador {jugador_usuario if jugador_actual == 'X' else jugador_cpu} ({jugador_actual})")
059  
060          if jugador_actual == "X":  # Turno del usuario
061              try:
062                  fila, columna = map(int, input("Ingrese fila y columna (ej. '0 0'): ").split())
063              except ValueError:
064                  print("Error: Por favor ingrese dos números separados por espacio.")
065                  continue
066  
067              if not (0 <= fila < 3 and 0 <= columna < 3):
068                  print("Error: Coordenadas fuera de rango. Debe ser entre 0 y 2.")
069                  continue
070  
071              if tablero[fila][columna] != " ":
072                  print("Casilla ocupada. Intente de nuevo.")
073                  continue
074  
075              tablero[fila][columna] = jugador_actual
076          else:  # Turno de la CPU
077              movimiento_cpu(tablero, jugador_actual)
078  
079          if verificar_ganador(tablero, jugador_actual):
080              resultado = f"\n¡El jugador {jugador_usuario if jugador_actual == 'X' else jugador_cpu} ({jugador_actual}) ha ganado!"
081              break
082  
083          if all(tablero[i][j] != " " for i in range(3) for j in range(3)):
084              resultado = "\n¡Empate!"
085              break
086  
087          jugador_actual = "O" if jugador_actual == "X" else "X"
088  
089      # Mostrar el tablero final y el resultado
090      imprimir_tablero(tablero)
091      print(resultado)
092  juego_gato()

